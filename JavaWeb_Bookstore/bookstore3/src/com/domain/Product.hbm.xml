<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping package="com.domain">
 	<class name="Product" table="t_product">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id> 	
		<property name="name" column="name" type="java.lang.String" ></property>
		<property name="price" column="price" type="java.lang.Double" ></property>
		<property name="pnum" column="pnum" type="java.lang.Integer" ></property>
		<property name="category" column="category" type="java.lang.String" ></property>
		<property name="description" column="description" type="java.lang.String" ></property>
		<property name="img_url" column="img_url" type="java.lang.String" ></property>
 	</class>
 </hibernate-mapping>